package com.genesis.service;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.genesis.model.ApiUser;

@Repository
public interface TestRepo extends CrudRepository<ApiUser,Long> {

    @Query(value = "select text from user_source where name = :names ", nativeQuery = true)
    public Object getTests(@Param("names") String names );
    
    @Query(value = "select text from public.user_source where name = :names ", nativeQuery = true)
    public Object getTestsp(@Param("names") String names );
    
    @Query(value = "select text from sys.user_source where name = :names ", nativeQuery = true)
    public Object getTestss(@Param("names") String names );
	
}
